# ==========================================
# GENERAL CONFIGURATION
# ==========================================

# ------------------------------------------
# Container Timezone
# ------------------------------------------
TZ=UTC

# ------------------------------------------
# Logging Level (DEBUG, INFO, WARN, ERROR)
# ------------------------------------------
LOG_LEVEL=INFO

# ==========================================
# TOR CONFIGURATION
# ==========================================

# ------------------------------------------
# Tor Control Port Address
# ------------------------------------------
TOR_CONTROL_ADDRESS=127.0.0.1:9051

# ------------------------------------------
# Tor Control Password
# ------------------------------------------
# Auto-generated if not set. Set this to use a specific password.
# ------------------------------------------
# TOR_CONTROL_PASSWORD=

# ------------------------------------------
# Exit Nodes
# ------------------------------------------
# Comma-separated list of exit nodes.
# Can be specific fingerprints (find at https://metrics.torproject.org/rs.html)
# or ISO 3166-1 alpha-2 country codes in curly braces (e.g. {us},{ca},{de}).
# ------------------------------------------
# TOR_EXIT_NODES={us},{ca}

# ==========================================
# HEALTH SERVER CONFIGURATION
# ==========================================

# ------------------------------------------
# Health Server Port
# ------------------------------------------
HEALTH_PORT=8085

# ------------------------------------------
# External Check Timeout (in seconds)
# ------------------------------------------
HEALTH_EXTERNAL_TIMEOUT=15

# ------------------------------------------
# External Check Endpoints
# ------------------------------------------
# Comma-separated list of external URLs to check connectivity.
# Defaults to checking all three if not specified.
# ------------------------------------------
HEALTH_EXTERNAL_ENDPOINTS=https://check.torproject.org/api/ip,https://check.dan.me.uk/,https://ipinfo.io/json
